@{
    ViewData["Title"] = "Customer Index";
}

<h1>@ViewBag.Message</h1>
<p>There are @ViewBag.CustomerCount customers are in to the List</p>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name of Customer
        </th>
        <th>
            Amount
        </th>
    </tr>
      @foreach(var item in ViewBag.CustomerList)
        {
    <tr>
      
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Amount</td>
    </tr>
        }
</table>
        <hr/>
        @Html.ActionLink("Details Page","Details","Customer")